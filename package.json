{
  "name": "action.ansible.collection",
  "version": "0.0.0",
  "description": "Build and publish an Ansible Collection to Ansible Galaxy.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build lib/main.js",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arillso/action.ansible.collection.git"
  },
  "author": "Simon Baerlocher <s.baerlocher@sbaerlocher.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arillso/action.ansible.collection/issues"
  },
  "homepage": "https://github.com/arillso/action.ansible.collection#readme",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/exec": "^1.0.3",
    "@types/js-yaml": "^3.12.2"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^13.9.1",
    "@typescript-eslint/parser": "^2.21.0",
    "@zeit/ncc": "^0.21.1",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.8.1",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.5",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
